{
    "manifest_version": 2,
    "name": "CSS Visual Ruler",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css":["main.css"],
            "js":["content.js"]
        } 
    ],
    "permissions": ["tabs"],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "a popup"
    }
}